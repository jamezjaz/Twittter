<div class="section d-flex justify-content-center">
  <div class="gravatar">
    <img src="http://www.gravatar.com/avatar" class="card-img-top rounded-circle" alt="foto" style="width: 5rem"; >
  </div>

  <div class="card">
    <% @tweeets.each do |tweeet| %>
      <div class="d-flex">
        <div class="card-image gravatar">
          <img src="http://www.gravatar.com/avatar" class="card-img-left rounded-circle" alt="foto">
        </div>

        <div class="card-body d-flex flex-column">
          <div>
            <p class="card-text"><%= tweeet.tweeet %></p>
          </div>
          <div class="icons d-flex">
            <%= link_to 'Show', tweeet %>
            <%= link_to 'Edit', edit_tweeet_path(tweeet) %>
            <%= link_to 'Destroy', tweeet, method: :delete, data: { confirm: 'Are you sure you want to delete this tweet?' } %>
          </div>
        </div>
      </div>
      <hr>
    <% end %>
  </div>
</div>

